. $(dirname "${BASH_SOURCE[0]}")/utils.sh

if [[ $(whoami) != 'root' ]]; then
    echo "Root permissions are required for running basefs resources"
    exit 3
fi


function gossipconv () {
    mkdir -p $BASEFSPATH/tmp/rounds
    nodes=29
    rounds=( 0 1 2 4 8 11 16 24 32 52 64 85 128 170 200 256 )
    mkdir $BASEFSPATH/tmp/testpoint && {
        for round in ${rounds[@]}; do
            bwrite $round $BASEFSPATH/tmp/testpoint/testfile-$round
        done
    }
    repetitions=${2:-30}
    for i in $(seq 1 $repetitions); do
        mkdir -p $BASEFSPATH/tmp/logs
        echo "$1" "$nodes"
        dock "$1" "$nodes" &
        pid=$!
        cpid=$(pgrep -P $pid basefs)
        trap "kill -INT $cpid; kill $pid 2> /dev/null; bstop; killall basefs; kill $$ 2> /dev/null; kill $cpid;" INT
        sleep 10
        sleep $(( $nodes*2 ))
        for j in ${rounds[@]}; do
            echo "cp $BASEFSPATH/tmp/testpoint/testfile-$j /tmp/test/" >> /tmp/eval_status
            cp $BASEFSPATH/tmp/testpoint/testfile-$j /tmp/test/
            sleep 3
            counter=0
            uid=$(grep " basefs.gossip: Sending " $BASEFSPATH/tmp/logs/node-0 | tail -n 1 | sed -E "s#([^:]+)\s*2016/01/.*2016-01-#\12016-01-#" | awk {'print $11'})
            while [[ $(grep "COMPLETED $uid" $BASEFSPATH/tmp/logs/node-* | wc -l) -lt $nodes && $counter -lt 500 ]]; do
                sleep 3
                counter=$(($counter+1))
            done
        done
        kill -INT $(ps aux|grep '/usr/local/bin/basefs mount test /tmp/test/ -iface docker0'|awk {'print $2'}|head -n 1)
        sleep 1
        kill -INT $(ps aux|grep '/usr/local/bin/basefs mount test /tmp/test/ -iface docker0'|awk {'print $2'}|head -n 1)
        bstop
        sleep 3
        bstop
        killall basefs
        mv $BASEFSPATH/tmp/logs $BASEFSPATH/tmp/rounds/logs-$i
    done
    trap - INT
}


function fullgossipconv2 () {
    gossipconv 'sleep 5;
        basefs genkey;
        basefs get test ${docker_ip};
        basefs resources test -l -r > /mnt/tmp/logs/node-$ix-resources &
        mkdir -p /tmp/test;
        basefs mount test /tmp/test -d &> /mnt/tmp/logs/node-$ix' 1
    mv $BASEFSPATH/tmp/rounds/ $BASEFSPATH/tmp/scenario-0
    gossipconv 'sleep 5;
        basefs genkey;
        basefs get test ${docker_ip};
        basefs resources test -l -r > /mnt/tmp/logs/node-$ix-resources &
        tc qdisc add dev eth0 root handle 1:0 netem delay 10ms 5ms distribution normal reorder 10% 25% loss 10% 25%;
        tc qdisc add dev eth0 parent 1:1 handle 10: tbf rate 100mbit buffer 75000 latency 10ms;
        mkdir -p /tmp/test;
        basefs mount test /tmp/test -d &> /mnt/tmp/logs/node-$ix' 1
    mv $BASEFSPATH/tmp/rounds/ $BASEFSPATH/tmp/scenario-1
    gossipconv 'sleep 5;
        basefs genkey;
        basefs get test ${docker_ip};
        basefs resources test -l -r > /mnt/tmp/logs/node-$ix-resources &
        tc qdisc add dev eth0 root handle 1:0 netem delay 50ms 10ms distribution normal reorder 20% 25% loss 20% 25%;
        tc qdisc add dev eth0 parent 1:1 handle 10: tbf rate 10mbit buffer 75000 latency 20ms;
        mkdir -p /tmp/test;
        basefs mount test /tmp/test -d &> /mnt/tmp/logs/node-$ix' 1
    mv $BASEFSPATH/tmp/rounds/ $BASEFSPATH/tmp/scenario-2
    gossipconv 'sleep 5;
        basefs genkey;
        basefs get test ${docker_ip};
        basefs resources test -l -r > /mnt/tmp/logs/node-$ix-resources &
        tc qdisc add dev eth0 root handle 1:0 netem delay 100ms 20ms distribution normal reorder 40% 25% loss 40% 25%;
        tc qdisc add dev eth0 parent 1:1 handle 10: tbf rate 5mbit buffer 75000 latency 40ms;
        mkdir -p /tmp/test;
        basefs mount test /tmp/test -d &> /mnt/tmp/logs/node-$ix' 1
    mv $BASEFSPATH/tmp/rounds/ $BASEFSPATH/tmp/scenario-3
    gossipconv 'sleep 5;
        basefs genkey;
        basefs get test ${docker_ip};
        basefs resources test -l -r > /mnt/tmp/logs/node-$ix-resources &
        tc qdisc add dev eth0 root handle 1:0 netem delay 300ms 70ms distribution normal reorder 70% 25% loss 70% 25%;
        tc qdisc add dev eth0 parent 1:1 handle 10: tbf rate 100kbit buffer 75000 latency 100ms;
        mkdir -p /tmp/test;
        basefs mount test /tmp/test -d &> /mnt/tmp/logs/node-$ix' 1
    mv $BASEFSPATH/tmp/rounds/ $BASEFSPATH/tmp/scenario-4
}


